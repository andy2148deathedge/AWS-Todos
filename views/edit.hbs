<form action="/todos/{{ todo.id }}?_method=PUT" method="POST" style="display: inline;">
  <div class="input-group">
    <div class="input-group-prepend">
      <div class="input-group-text">
        <input type="checkbox" name="isDone" {{#if todo.isDone }} checked {{/if}} disabled>
      </div>
    </div>
    <input class="form-control" type="text" placeholder="{{ todo.name }}" name="name" value="{{ todo.name }}" >
    <div class="input-group-append">
      <button class="btn btn-success" type="submit">Check to edit !</button>
    </div>
  </div>
</form>

<a type="button" class="btn btn-info m-4" href="/">back</a>